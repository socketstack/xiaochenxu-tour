@import "../common/main/main.wxss";
@import "../common/hotelCell/hotelCell.wxss";
@import "../common/routeCell/routeCell.wxss";
@import "../common/foodCell/foodCell.wxss";
/* 搜索栏 */
.search_box{
  height:100rpx;
  width:100%;
  background: #d8d8d8;
  position: fixed;
  top:0;
  left:0;
  z-index: 99;
}
.search{
  display: block;
  width:80%;
  height:70rpx;
  background: #fff;
  border:1rpx solid #ccc;
  border-radius: 35rpx;
  padding-left: 16rpx;
  margin:0 auto;
  margin-top: 15rpx;
}
.search image{
  display: block;
  float: left;
  width:40rpx;
  height:40rpx;
  margin-top: 15rpx;
  margin-right: 20rpx;
}
.search input{
  width: 80%;
  font-size: 28rpx;
  float:left;
  color:#999;
  height:70rpx;
  line-height: 72rpx;
}
/* 轮播图 */
swiper{
  margin-top: 100rpx;
}
swiper image{
  height:100%;
  width:100%;
  vertical-align: center;
}
/* 菜单列表 */
.menu{
  width:100%;
  height:212rpx;
  margin-bottom: 20rpx;
}
.menu .item{
  float: left;
  margin-top: 20rpx;
  width:25%;
  height:160rpx;
}
.menu .item .img{
  width:120rpx;
  height:120rpx;
  margin: 0 auto;
  border-radius: 55rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.strate{
    background: #54c531;
}
.hotel{
    background: #ef3d6e;
}
.route{
    background: #fdb00e;
}
.food{
    background: #fa8125;
}
.menu .item .img image{
  display: block;
  width:80rpx;
  height:80rpx;
  position: absolute;
  left:20rpx;
  top:20rpx;
}
.menu .item text{
  display: block;
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  /* color:#515151; */
  font-size: 36rpx;
  text-align: center;
}
.active{
  color:orange;
}
/* 景点数据 */
scroll-view{
  height:100%;
  overflow: hidden;
}
/* 路线数据 */
.routtitle{
  float:left;
  display:block;
  height:100rpx;
  width: auto;
  line-height: 100rpx;
  font-size:40rpx;
  margin: 0 auto;
  margin-bottom: 20rpx; 
  color:#ff2626;
}
.qizi{
  display: block;
  height:70rpx;
  width:70rpx;
  border-radius:50%;
  background: #32cbcb;
  position: relative;
  float:left;
  margin-right: 20rpx;
  margin-left: 20rpx;
  margin-top:15rpx;
}
.qizi image{
  display: block;
  height:45rpx;
  width:45rpx;
  left:12rpx;
  top:13rpx;
  position:absolute;
}