.foodTap{
  width: 98%;
  height:350rpx;
  background: #fff;
  margin: 0 auto;
  margin-bottom: 40rpx;
}
.foodTap image{
  display: block;
  width:60%;
  float: left;
  height:350rpx;
  margin-right:3%;
}
 .foodTap .con{
   width: 35%;
   height:350rpx;
  float: right;
 }
 .foodTap .title{
  font-size: 32rpx;
  display: block;
  height:85rpx;
  width:100%;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;

 }
 .foodTap .score{
   display: block;
   margin-bottom: 20rpx;
 }
 .address{
   width:100%;
   height:120rpx;
   display: block;
   font-size:30rpx;
   margin-bottom: 10rpx;
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;

 }
 .avgprice{
   display: block;
   color: #ff0000;
 }